                    throw new Error('Failed to fetch users');
                }
                return response.json();
            })
            .then(users => {
                console.log('Users:', users);
                // Check if any user has the entered email
                const userFound = users.some(user => user.email === enteredValue);
                if (!userFound) {
                    // Show alert if user not found
                    alert('User with entered email not found');
                    // Disable submit button
                    document.getElementById('submit_button').disabled = true;
                }
                else
                {
                    document.getElementById('submit_button').disabled = false;
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        // You can perform further actions with the entered value here
    }
</script>


