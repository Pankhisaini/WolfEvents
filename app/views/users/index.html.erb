<p style="color: green"><%= notice %></p>

<style>
    table, td, th {
        border: 1px solid #ddd;
        text-align: left;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 15px;
    }
</style>


<h1>Attendees</h1>
<%= link_to "New user", new_user_path%>
<br>
<br>
<%= form_with(url: users_path, method: "get", local: true) do %>
  <div class="field">
    <%= text_field_tag :event_name, params[:event_name], placeholder: "Enter event name" %>
    <%= submit_tag "Search" %>
  </div>
<% end %>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email address</th>
    <th>Address</th>
    <th>Phone number</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <div id="users">
  <% @users.each do |user| %>

        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td><%= user.phone_number %></td>
          <td><%= link_to 'Show', user %> |
          <%= link_to 'Edit', edit_user_path(user) %> |
            <%if !user.is_admin? %>
          <%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <%end %>
        </tr>

  <% end %>

  </div>
  </tbody>

</table>

